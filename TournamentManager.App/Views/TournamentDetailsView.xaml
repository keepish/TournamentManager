<UserControl x:Class="TournamentManager.Client.Views.TournamentDetailsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TournamentManager.Client.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TournamentManager.Client.Views">

    <Grid Margin="16" Background="{StaticResource SecondaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource PanelStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="{Binding TournamentName}"
                               Style="{StaticResource HeaderTextStyle}"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="{Binding TournamentDescription}"
                               Style="{StaticResource BodyTextStyle}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"
                               MaxWidth="600"/>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <materialDesign:PackIcon Kind="Calendar" 
                                               Width="16" 
                                               Height="16" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,0,4,0"/>

                        <TextBlock Text="{Binding TournamentDates}"
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,0,16,0"/>

                        <materialDesign:PackIcon Kind="MapMarker" 
                                               Width="16" 
                                               Height="16" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="16,0,4,0"/>

                        <TextBlock Text="{Binding TournamentAddress}" 
                                   Style="{StaticResource BodyTextStyle}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Назад"
                            Height="40"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,12,0"
                            VerticalAlignment="Top"/>

                    <Button Content="Управление категориями"
                            Height="40"
                            Command="{Binding ManageCategoriesCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            VerticalAlignment="Top"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <Button Content="Зарегистрировать участников"
                        Command="{Binding AddParticipantCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,12,0">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountPlus" Width="16" Height="16" Margin="0,0,8,0" Cursor="Hand"/>
                                <TextBlock Text="Добавить участника" Foreground="{StaticResource WhiteBrush}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Content="Импорт участников"
                        Command="{Binding ImportParticipantsCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,12,0">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Import" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Импорт" Style="{StaticResource BodyTextStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Content="Экспорт участников" 
                        Command="{Binding ExportParticipantsCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,12,0">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Export" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Экспорт" Style="{StaticResource BodyTextStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Content="Обновить список" 
                        Command="{Binding LoadParticipantsCommand}"
                        Style="{StaticResource SecondaryButtonStyle}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Обновить" Style="{StaticResource BodyTextStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="0">
            <Grid>
                <DataGrid ItemsSource="{Binding Participants}"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          CanUserAddRows="True"
                          CanUserDeleteRows="True"
                          SelectionMode="Single"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          Background="Transparent"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          CellEditEnding="DataGrid_CellEditEnding"
                          AddingNewItem="DataGrid_AddingNewItem"
                          RowEditEnding="DataGrid_RowEditEnding">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="0.5*" Visibility="Collapsed"/>
                        <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" Width="1.2*"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="1.2*"/>
                        <DataGridTextColumn Header="Отчество" Binding="{Binding Patronymic}" Width="1.2*"/>
                        <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="1.5*"/>
                        <DataGridTextColumn Header="Пол" Binding="{Binding GenderDisplay}" Width="0.8*"/>
                        <DataGridTextColumn Header="Возраст" Binding="{Binding Age}" Width="0.7*"/>
                        <DataGridTextColumn Header="Вес (кг)" Binding="{Binding Weight, StringFormat={}{0:F1} кг}" Width="0.8*"/>
                        <DataGridTextColumn Header="Дата рождения" 
                                          Binding="{Binding Birthday, StringFormat='dd.MM.yyyy'}" 
                                          Width="1.2*"/>
                    </DataGrid.Columns>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>

                <Border Background="Transparent"
                        Visibility="{Binding Participants.Count, Converter={converters:EmptyToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="👥"
                                   Foreground="{StaticResource TextHintBrush}"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="Участники не найдены"
                                   Style="{StaticResource SubHeaderTextStyle}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Добавьте участников или импортируйте их из файла"
                                   Style="{StaticResource HintTextStyle}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource ProgressBarBrush}"
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar Style="{StaticResource ProgressBarStyle}"
                                     Width="200"
                                     Height="8"
                                     Margin="0,0,0,16"/>
                        <TextBlock Text="Загрузка участников..."
                                   Style="{StaticResource BodyTextStyle}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
