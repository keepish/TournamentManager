<UserControl x:Class="TournamentManager.Client.Views.TournamentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TournamentManager.Client.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:TournamentManager.Client.Views">

    <UserControl.Resources>
        <Style x:Key="TournamentsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="#FF333333"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#FF1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16" Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="White" Padding="16" Margin="0,0,0,16" BorderThickness="0,0,0,1" BorderBrush="#FFE0E0E0">
            <StackPanel Orientation="Horizontal">
                <Button Content="Создать турнир"
                        Command="{Binding CreateTournamentCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,12,0"/>

                <ComboBox ItemsSource="{Binding StatusFilters}"
                          SelectedItem="{Binding SelectedStatusFilter}"
                          Width="160"
                          Margin="0,0,12,0"
                          Style="{StaticResource ComboBoxStyle}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Padding="4"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Width="200"
                             Margin="0,0,4,0"
                             Style="{StaticResource TextBoxStyle}"/>
                    <Button Content="Поиск" 
                            Command="{Binding LoadTournamentsCommand}"
                            Style="{StaticResource ActionButtonStyle}"
                            Padding="12,4"/>
                </StackPanel>

                <Button Content="Обновить"
                        Command="{Binding LoadTournamentsCommand}"
                        Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="4">
            <ItemsControl ItemsSource="{Binding Tournaments}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource TournamentsCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="#FF333333"
                                                   VerticalAlignment="Center"/>

                                        <Border Background="{Binding Status, Converter={converters:StatusToColorConverter}}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                Margin="12,0,0,0"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Status}"
                                                       Foreground="White"
                                                       FontSize="11"
                                                       FontWeight="Medium"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>

                                    <TextBlock Text="{Binding Description}"
                                               FontSize="13"
                                               Foreground="#FF666666"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,12"
                                               MaxHeight="40"
                                               TextTrimming="CharacterEllipsis"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Margin="0,0,24,0">
                                            <TextBlock Text="Даты проведения"
                                                       FontSize="10"
                                                       Foreground="#FF888888"
                                                       Margin="0,0,0,2"/>
                                            <TextBlock Text="{Binding StartDate, StringFormat=ddd.MM.yyyy}"
                                                       FontSize="12"
                                                       FontWeight="Medium"/>
                                            <TextBlock Text="{Binding EndDate, StringFormat=ddd.MM.yyyy}"
                                                       FontSize="12"
                                                       Foreground="#FF888888"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="0,0,24,0">
                                            <TextBlock Text="Место проведения"
                                                       FontSize="10"
                                                       Foreground="#FF888888"
                                                       Margin="0,0,0,2"/>
                                            <TextBlock Text="{Binding Address}"
                                                       FontSize="12"
                                                       FontWeight="Medium"
                                                       TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Margin="0,0,24,0">
                                            <TextBlock Text="Организатор"
                                                       FontSize="10"
                                                       Foreground="#FF888888"
                                                       Margin="0,0,0,2"/>
                                            <TextBlock Text="Федерация Тхэквондо"
                                                       FontSize="12"
                                                       FontWeight="Medium"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top">
                                    <Button Content="Просмотр"
                                            Command="{Binding DataContext.ViewTournamentDetailsCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButtonStyle}"/>
                                    <Button Content="Редактировать"
                                            Command="{Binding DataContext.EditTournamentCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButtonStyle}"/>
                                    <Button Content="Удалить"
                                            Command="{Binding DataContext.DeleteTournamentCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Foreground="Red"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="1"
                Background="Transparent"
                Visibility="{Binding Tournaments.Count, Converter={converters:EmptyToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🏆"
                           FontSize="48"
                           Margin="0,0,0,16"/>
                <TextBlock Text="Турниры не найдены"
                           FontSize="18"
                           Foreground="#FF666666"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Создайте первый турнир или измените параметры фильтрации"
                           FontSize="13"
                           Foreground="#FF888888"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                Background="#CCFFFFFF"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="8"
                             Margin="0,0,0,16"/>
                <TextBlock Text="Загрузка турниров..."
                           Foreground="#FF333333"
                           FontSize="14"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>