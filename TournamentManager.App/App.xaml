<Application x:Class="TournamentManager.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TournamentManager.Client.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TournamentManager.Client;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
            <converters:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>
            <converters:TournamentStatusToStringConverter x:Key="TournamentStatusToStringConverter"/>
            <converters:TournamentStatusToColorConverter x:Key="TournamentStatusToColorConverter"/>
            <converters:CollapsedMenuWidthConverter x:Key="CollapsedMenuWidthConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:RoundToLeftVisibilityConverter x:Key="RoundToLeftVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
