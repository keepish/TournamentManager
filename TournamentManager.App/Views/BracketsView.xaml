<UserControl x:Class="TournamentManager.Client.Views.BracketsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="Root">
  <Grid Margin="16" Background="{StaticResource SecondaryBrush}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Border Grid.Row="0" Style="{StaticResource PanelStyle}" Padding="12">
      <DockPanel>
        <TextBlock Text="Турнирные сетки" Style="{StaticResource HeaderTextStyle}" DockPanel.Dock="Left"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
          <Button Content="Завершить категорию"
                  Style="{StaticResource PrimaryButtonStyle}"
                  Margin="8,0,0,0"
                  Command="{Binding DataContext.FinishCategoryCommand, ElementName=Root}"
                  IsEnabled="{Binding ElementName=Root, Path=DataContext.IsTournamentEditable}"
                  ToolTip="Фиксировать результаты и показать призовые места"/>
        </StackPanel>
      </DockPanel>
    </Border>

    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="0">
      <TabControl ItemsSource="{Binding Brackets}"
                  SelectedIndex="{Binding SelectedBracketIndex, Mode=TwoWay}">
        <TabControl.ItemContainerStyle>
          <Style TargetType="TabItem">
            <Setter Property="Header" Value="{Binding CategoryDisplay}"/>
          </Style>
        </TabControl.ItemContainerStyle>
        <TabControl.ContentTemplate>
          <DataTemplate>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
              <StackPanel>
                <!-- Podium summary shown when category finished -->
                <Border Style="{StaticResource PanelStyle}" Padding="12" Margin="0,0,0,8"
                        Visibility="{Binding IsCategoryFinished, Converter={StaticResource BooleanToVisibilityConverter}}">
                  <TextBlock>
                    <Run Text="Победители: "/>
                    <Run Text="1 место: "/><Run Text="{Binding PodiumGold}"/>
                    <Run Text=", 2 место: "/><Run Text="{Binding PodiumSilver}"/>
                    <Run Text=", 3 место: "/><Run Text="{Binding PodiumBronze}"/>
                  </TextBlock>
                </Border>

                <ItemsControl ItemsSource="{Binding Rounds}">
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <StackPanel Width="340" Margin="8,16,8,16">
                        <TextBlock Text="{Binding Title}" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,8"/>
                        <ListBox ItemsSource="{Binding Items}"
                                 BorderThickness="0"
                                 PreviewMouseMove="ListBox_PreviewMouseMove"
                                 Drop="ListBox_Drop">
                          <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                              <Setter Property="Background" Value="Transparent"/>
                              <Setter Property="BorderThickness" Value="0"/>
                              <Setter Property="Padding" Value="0"/>
                              <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                              <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                          </ListBox.ItemContainerStyle>
                          <ListBox.ItemTemplate>
                            <DataTemplate>
                              <Border Margin="0,0,0,8" Padding="10" Background="{StaticResource WhiteBrush}" CornerRadius="6" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                      MinWidth="320" Height="160">
                                <Grid VerticalAlignment="Center">
                                  <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                  </Grid.ColumnDefinitions>
                                  <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                  </Grid.RowDefinitions>

                                  <!-- First participant name + arrows -->
                                  <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
                                    <TextBlock Text="{Binding FirstParticipantName}"
                                               FontSize="12"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding FirstParticipantName}"
                                               Style="{StaticResource BodyTextStyle}"
                                               PreviewMouseLeftButtonDown="Participant_PreviewMouseLeftButtonDown"
                                               PreviewMouseMove="Participant_PreviewMouseMove"
                                               PreviewMouseLeftButtonUp="Participant_PreviewMouseLeftButtonUp"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,4,0,0">
                                      <Button ToolTip="Переместить вправо"
                                              Click="MoveRight_Click"
                                              Tag="1" Margin="4,0,0,0">
                                        <Button.Style>
                                          <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                              <DataTrigger Binding="{Binding DataContext.IsLastRound, RelativeSource={RelativeSource AncestorType=ListBox}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                              </DataTrigger>
                                            </Style.Triggers>
                                          </Style>
                                        </Button.Style>
                                        <TextBlock Text="→" FontSize="12"/>
                                      </Button>
                                    </StackPanel>
                                  </StackPanel>

                                  <!-- Second participant name + arrows -->
                                  <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
                                    <TextBlock Text="{Binding SecondParticipantName}"
                                               FontSize="12"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding SecondParticipantName}"
                                               Style="{StaticResource BodyTextStyle}"
                                               PreviewMouseLeftButtonDown="Participant_PreviewMouseLeftButtonDown"
                                               PreviewMouseMove="Participant_PreviewMouseMove"
                                               PreviewMouseLeftButtonUp="Participant_PreviewMouseLeftButtonUp"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,4,0,0">
                                      <Button ToolTip="Переместить вправо"
                                              Click="MoveRight_Click"
                                              Tag="2" Margin="4,0,0,0">
                                        <Button.Style>
                                          <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                              <DataTrigger Binding="{Binding DataContext.IsLastRound, RelativeSource={RelativeSource AncestorType=ListBox}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                              </DataTrigger>
                                            </Style.Triggers>
                                          </Style>
                                        </Button.Style>
                                        <TextBlock Text="→" FontSize="12"/>
                                      </Button>
                                    </StackPanel>
                                  </StackPanel>

                                  <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Center" Margin="8,0" Orientation="Vertical">
                                    <StackPanel.Style>
                                      <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                          <DataTrigger Binding="{Binding SecondParticipantName}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                          </DataTrigger>
                                          <DataTrigger Binding="{Binding SecondParticipantName.Length}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                          </DataTrigger>
                                          <!-- Hide action buttons when category is finished -->
                                          <DataTrigger Binding="{Binding DataContext.IsCategoryFinished, RelativeSource={RelativeSource AncestorType=TabControl}}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                          </DataTrigger>
                                          <!-- Hide action buttons if tournament not editable -->
                                          <DataTrigger Binding="{Binding DataContext.IsTournamentEditable, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                          </DataTrigger>
                                        </Style.Triggers>
                                      </Style>
                                    </StackPanel.Style>
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            ToolTipService.ShowDuration="2000"
                                            ToolTip="Начать"
                                            Command="{Binding DataContext.StartMatchCommand, ElementName=Root}"
                                            CommandParameter="{Binding}">
                                      <Viewbox Width="15" Height="15" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Path Data="M6,4 L20,12 6,20 Z" Fill="{StaticResource TextPrimaryBrush}"/>
                                      </Viewbox>
                                    </Button>
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            ToolTipService.ShowDuration="2000"
                                            ToolTip="Завершить"
                                            Command="{Binding DataContext.FinishMatchCommand, ElementName=Root}"
                                            CommandParameter="{Binding}">
                                      <Viewbox Width="15" Height="15" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Path Data="M18,6 L6,18 M6,6 L18,18" StrokeThickness="2" Stroke="{StaticResource TextPrimaryBrush}"/>
                                      </Viewbox>
                                    </Button>
                                  </StackPanel>

                                  <TextBox Grid.Row="0" Grid.Column="2" Width="90" MinWidth="80" Margin="8,2,0,2" VerticalAlignment="Center" TextAlignment="Center"
                                           Text="{Binding FirstParticipantScore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                           Style="{StaticResource TextBoxStyle}" IsEnabled="{Binding IsStarted}"/>
                                  <TextBox Grid.Row="1" Grid.Column="2" Width="90" MinWidth="80" Margin="8,2,0,2" VerticalAlignment="Center" TextAlignment="Center"
                                           Text="{Binding SecondParticipantScore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                           Style="{StaticResource TextBoxStyle}" IsEnabled="{Binding IsStarted}"/>
                                </Grid>
                              </Border>
                            </DataTemplate>
                          </ListBox.ItemTemplate>
                        </ListBox>
                      </StackPanel>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </StackPanel>
            </ScrollViewer>
          </DataTemplate>
        </TabControl.ContentTemplate>
      </TabControl>
    </Border>
  </Grid>
</UserControl>
