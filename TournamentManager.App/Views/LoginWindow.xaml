<Window x:Class="TournamentManager.Client.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TournamentManager.Client"
        mc:Ignorable="d"
        Title="Tournament Manager - Авторизация"
        Height="400" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Tournament Manger"
                       Style="{StaticResource HeaderTextStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource TextBoxStyle}"
                     Margin="0,0,0,15"/>

            <PasswordBox x:Name="PasswordBox"
                         Margin="0,0,0,25"/>

            <Button Content="ВОЙТИ" 
                    Command="{Binding AuthorizeCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    FontWeight="Bold"/>

            <ProgressBar Style="{StaticResource ProgressBarStyle}"
                         IsIndeterminate="True" 
                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                         Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
