<UserControl x:Class="TournamentManager.Client.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="🏠 Главная панель" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <Border CornerRadius="8" 
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Добро пожаловать в систему управления соревнованиями!" 
                               FontSize="16" 
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Выберите раздел в меню слева для начала работы." 
                               FontSize="14"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>