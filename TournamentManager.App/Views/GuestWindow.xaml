<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="TournamentManager.Client.Views.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Гость" Height="450" Width="600" WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Турниры" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,10"/>
            <ListBox ItemsSource="{Binding Tournaments}" DisplayMemberPath="Name" Height="300"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Войти" Command="{Binding EnterCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Закрыть" Command="{Binding CloseCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>