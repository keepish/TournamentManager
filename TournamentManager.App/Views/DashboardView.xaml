<UserControl x:Class="TournamentManager.Client.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ScrollViewer Style="{StaticResource ScrollViewerStyle}">
        <StackPanel Margin="20" Background="{StaticResource SecondaryBrush}">
            <TextBlock Text="🏠 Главная панель"
                       Style="{StaticResource HeaderTextStyle}"/>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Добро пожаловать в систему управления соревнованиями!" 
                               Style="{StaticResource SubHeaderTextStyle}"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Выберите раздел в меню слева для начала работы." 
                               Style="{StaticResource BodyTextStyle}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>