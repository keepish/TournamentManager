<UserControl x:Class="TournamentManager.Client.Views.BracketsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="Root">
  <!-- Removed local BracketIconButtonStyle to avoid recursive ContentPresenter causing StackOverflow -->
  <Grid Margin="16" Background="{StaticResource SecondaryBrush}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Border Grid.Row="0" Style="{StaticResource PanelStyle}" Padding="12">
      <TextBlock Text="Турнирные сетки" Style="{StaticResource HeaderTextStyle}"/>
    </Border>

    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="0">
      <TabControl ItemsSource="{Binding Brackets}"
                  SelectedIndex="{Binding SelectedBracketIndex, Mode=TwoWay}">
        <TabControl.ItemContainerStyle>
          <Style TargetType="TabItem">
            <Setter Property="Header" Value="{Binding CategoryDisplay}"/>
          </Style>
        </TabControl.ItemContainerStyle>
        <TabControl.ContentTemplate>
          <DataTemplate>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
              <ItemsControl ItemsSource="{Binding Rounds}">
                <ItemsControl.ItemsPanel>
                  <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                  </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <StackPanel Width="340" Margin="8,16,8,16">
                      <TextBlock Text="{Binding Title}" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,8"/>
                      <ListBox ItemsSource="{Binding Items}"
                               BorderThickness="0"
                               ScrollViewer.CanContentScroll="True"
                               VirtualizingPanel.IsVirtualizing="True"
                               VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListBox.Resources>
                          <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                          <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="{StaticResource TextPrimaryBrush}"/>
                        </ListBox.Resources>
                        <ListBox.ItemContainerStyle>
                          <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                            <Setter Property="Template">
                              <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                  <Border Background="Transparent" BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                  </Border>
                                </ControlTemplate>
                              </Setter.Value>
                            </Setter>
                          </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemsPanel>
                          <ItemsPanelTemplate>
                            <VirtualizingStackPanel/>
                          </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                          <DataTemplate>
                            <Border Margin="0,0,0,8" Padding="10" Background="{StaticResource WhiteBrush}" CornerRadius="6" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                    MinWidth="320" Height="160">
                              <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                  <ColumnDefinition Width="*"/>
                                  <ColumnDefinition Width="Auto"/>
                                  <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                  <RowDefinition Height="*"/>
                                  <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="{Binding FirstParticipantName}"
                                           Style="{StaticResource BodyTextStyle}" FontSize="12"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding FirstParticipantName}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="{Binding SecondParticipantName, TargetNullValue=Ожидает соперника}"
                                           Style="{StaticResource BodyTextStyle}" FontSize="12"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding SecondParticipantName}"/>

                                <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                            VerticalAlignment="Center"
                                            Margin="8,0"
                                            Orientation="Vertical">
                                  <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                      <Setter Property="Visibility" Value="Visible"/>
                                      <Style.Triggers>
                                        <DataTrigger Binding="{Binding SecondParticipantName}" Value="{x:Null}">
                                          <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SecondParticipantName.Length}" Value="0">
                                          <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                      </Style.Triggers>
                                    </Style>
                                  </StackPanel.Style>
                                  <!-- Start -->
                                  <Button Style="{StaticResource IconButtonStyle}"
                                          ToolTipService.ShowDuration="2000"
                                          ToolTip="Начать"
                                          Command="{Binding DataContext.StartMatchCommand, ElementName=Root}"
                                          CommandParameter="{Binding}">
                                    <Viewbox Width="15" Height="15" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                                      <Path Data="M6,4 L20,12 6,20 Z" Fill="{StaticResource TextPrimaryBrush}"/>
                                    </Viewbox>
                                  </Button>
                                  <!-- Finish -->
                                  <Button Style="{StaticResource IconButtonStyle}"
                                          ToolTipService.ShowDuration="2000"
                                          ToolTip="Завершить"
                                          Command="{Binding DataContext.FinishMatchCommand, ElementName=Root}"
                                          CommandParameter="{Binding}">
                                    <Viewbox Width="15" Height="15" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                                      <Path Data="M18,6 L6,18 M6,6 L18,18" StrokeThickness="2" Stroke="{StaticResource TextPrimaryBrush}"/>
                                    </Viewbox>
                                  </Button>
                                  <!-- Edit (visible for organizer) -->
                                  <Button Style="{StaticResource IconButtonStyle}"
                                          ToolTipService.ShowDuration="2000"
                                          ToolTip="Редактировать"
                                          Visibility="{Binding DataContext.IsOrganizer, ElementName=Root, Converter={StaticResource BooleanToVisibilityConverter}}"
                                          Command="{Binding DataContext.EditMatchCommand, ElementName=Root}"
                                          CommandParameter="{Binding}">
                                    <Viewbox Width="15" Height="15" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                                      <Path Data="M3,17.25V21h3.75L17.81,9.94l-3.75-3.75L3,17.25z M20.71,7.04a1.0,1.0 0 0 0 0-1.41L18.37,3.29a1.0,1.0 0 0 0-1.41,0l-1.83,1.83 3.75,3.75 1.83-1.83z" Fill="{StaticResource TextPrimaryBrush}"/>
                                    </Viewbox>
                                  </Button>
                                </StackPanel>

                                <TextBox Grid.Row="0" Grid.Column="2"
                                         Width="90" MinWidth="80"
                                         Margin="8,2,0,2"
                                         VerticalAlignment="Center"
                                         TextAlignment="Center"
                                         Text="{Binding FirstParticipantScore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource TextBoxStyle}"
                                         IsEnabled="{Binding CanEdit}"/>
                                <TextBox Grid.Row="1" Grid.Column="2"
                                         Width="90" MinWidth="80"
                                         Margin="8,2,0,2"
                                         VerticalAlignment="Center"
                                         TextAlignment="Center"
                                         Text="{Binding SecondParticipantScore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource TextBoxStyle}"
                                         IsEnabled="{Binding CanEdit}"/>
                              </Grid>
                            </Border>
                          </DataTemplate>
                        </ListBox.ItemTemplate>
                      </ListBox>
                    </StackPanel>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </ScrollViewer>
          </DataTemplate>
        </TabControl.ContentTemplate>
      </TabControl>
    </Border>
  </Grid>
</UserControl>
