<Window x:Class="TournamentManager.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TournamentManager.Client.Views"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource PrimaryBrush}">
            <Grid Margin="16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="AccountCircle" Width="32" Height="32" Foreground="White" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding CurrentUser.FullName}" Foreground="{StaticResource WhiteBrush}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text=" | " Foreground="{StaticResource WhiteBrush}" FontSize="18" Margin="8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentUser.Role}" Foreground="{StaticResource WhiteBrush}" FontSize="18" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="Федерация Тхэквондо - Система управления соревнованиями" 
                           Foreground="{StaticResource WhiteBrush}" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <local:WindowControls HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border BorderThickness="0,0,1,0"
                    Background="{StaticResource WhiteBrush}"
                    BorderBrush="{StaticResource BorderBrush}">
                <ScrollViewer Style="{StaticResource ScrollViewerStyle}">
                    <Grid>
                        <StackPanel Margin="8,25,8,8">

                            <Button Content="Главная" Command="{Binding NavigateCommand}" 
                                CommandParameter="Dashboard"
                                Margin="0,2"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                            <Button Content="Турниры" Command="{Binding NavigateCommand}" 
                                CommandParameter="Tournaments"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,2"/>

                            <ItemsControl ItemsSource="{Binding MenuItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Title}" 
                                            Command="{Binding Command}" 
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <Button Grid.Row="1" Margin="8" Foreground="{StaticResource WhiteBrush}"
                            Content="Выход из аккаунта"
                            VerticalAlignment="Bottom"
                            Command="{Binding LogoutCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Background="{StaticResource ErrorBrush}"
                            BorderBrush="{StaticResource WhiteBrush}"/>
                    </Grid>
                </ScrollViewer>
            </Border>

            <ContentControl Grid.Column="1" Grid.Row="1" Content="{Binding CurrentView}"
                            Background="{StaticResource SecondaryBrush}"/>
        </Grid>
    </Grid>
</Window>
