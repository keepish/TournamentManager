<Window x:Class="TournamentManager.Client.Views.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TournamentManager.Client.Views"
        mc:Ignorable="d"
        Title="Гость" Height="450" Width="600" WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Заголовок по центру -->
        <TextBlock Grid.Row="0" Text="Турниры" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,10" HorizontalAlignment="Center" />

        <!-- Список по центру; элементы списка по центру -->
        <Border Grid.Row="1" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ListBox ItemsSource="{Binding Tournaments}" Height="300" Width="480" HorizontalContentAlignment="Center">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" TextAlignment="Center" HorizontalAlignment="Center"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Кнопки остаются справа -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Войти" Command="{Binding EnterCommand}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
            <Button Content="Закрыть" Command="{Binding CloseCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
