<UserControl x:Class="TournamentManager.Client.Views.BracketsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="Root">
  <Grid Margin="16" Background="{StaticResource SecondaryBrush}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Border Grid.Row="0" Style="{StaticResource PanelStyle}" Padding="12">
      <DockPanel>
        <TextBlock Text="Турнирные сетки" Style="{StaticResource HeaderTextStyle}" DockPanel.Dock="Left"/>
      </DockPanel>
    </Border>

    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="0">
      <TabControl ItemsSource="{Binding Brackets}"
                  SelectedIndex="{Binding SelectedBracketIndex, Mode=TwoWay}">
        <TabControl.ItemContainerStyle>
          <Style TargetType="TabItem">
            <Setter Property="Header" Value="{Binding CategoryDisplay}"/>
          </Style>
        </TabControl.ItemContainerStyle>
        <TabControl.ContentTemplate>
          <DataTemplate>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
              <StackPanel>
                <!-- Podium summary shown when category finished -->
                <Border Style="{StaticResource PanelStyle}" Padding="12" Margin="0,0,0,8"
                        Visibility="{Binding IsCategoryFinished, Converter={StaticResource BooleanToVisibilityConverter}}">
                  <TextBlock>
                    <Run Text="Победители: "/>
                    <Run Text="1 место: "/><Run Text="{Binding PodiumGold}"/>
                    <Run Text=", 2 место: "/><Run Text="{Binding PodiumSilver}"/>
                    <Run Text=", 3 место: "/><Run Text="{Binding PodiumBronze}"/>
                  </TextBlock>
                </Border>

                <ItemsControl ItemsSource="{Binding Rounds}">
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <StackPanel Width="340" Margin="8,16,8,16">
                        <TextBlock Text="{Binding Title}" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,8"/>
                        <ListBox ItemsSource="{Binding Items}"
                                 BorderThickness="0"
                                 ScrollViewer.CanContentScroll="True"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.VirtualizationMode="Recycling">
                          <ListBox.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="{StaticResource TextPrimaryBrush}"/>
                          </ListBox.Resources>
                          <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                              <Setter Property="Background" Value="Transparent"/>
                              <Setter Property="BorderThickness" Value="0"/>
                              <Setter Property="Padding" Value="0"/>
                              <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                              <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                              <Setter Property="VerticalContentAlignment" Value="Center"/>
                              <Setter Property="OverridesDefaultStyle" Value="True"/>
                              <Setter Property="Template">
                                <Setter.Value>
                                  <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="Transparent" BorderThickness="0">
                                      <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                    </Border>
                                  </ControlTemplate>
                                </Setter.Value>
                              </Setter>
                            </Style>
                          </ListBox.ItemContainerStyle>
                          <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                              <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                          </ListBox.ItemsPanel>
                          <ListBox.ItemTemplate>
                            <DataTemplate>
                              <Border Margin="0,0,0,8" Padding="10" Background="{StaticResource WhiteBrush}" CornerRadius="6" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                      MinWidth="320" Height="160">
                                <Grid VerticalAlignment="Center">
                                  <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                  </Grid.ColumnDefinitions>
                                  <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                  </Grid.RowDefinitions>

                                  <TextBlock Grid.Row="0" Grid.Column="0"
                                             Text="{Binding FirstParticipantName}"
                                             Style="{StaticResource BodyTextStyle}" FontSize="12"
                                             VerticalAlignment="Center"
                                             TextTrimming="CharacterEllipsis"
                                             ToolTip="{Binding FirstParticipantName}"/>
                                  <!-- Стрелки управления для первого участника -->
                                  <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Left">
                                    <StackPanel.Style>
                                      <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                          <DataTrigger Binding="{Binding DataContext.IsCategoryFinished, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                          </DataTrigger>
                                        </Style.Triggers>
                                      </Style>
                                    </StackPanel.Style>
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            ToolTip="Влево"
                                            Command="{Binding DataContext.MoveLeftCommand, ElementName=Root}"
                                            CommandParameter="{Binding}" Visibility="{Binding Round, Converter={StaticResource RoundToLeftVisibilityConverter}}">
                                      <Viewbox Width="12" Height="12"><Path Data="M12,6 L6,12 12,18" StrokeThickness="2" Stroke="{StaticResource TextPrimaryBrush}"/></Viewbox>
                                    </Button>
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            ToolTip="Вправо"
                                            Command="{Binding DataContext.MoveRightCommand, ElementName=Root}"
                                            CommandParameter="{Binding}">
                                      <Viewbox Width="12" Height="12"><Path Data="M6,6 L12,12 6,18" StrokeThickness="2" Stroke="{StaticResource TextPrimaryBrush}"/></Viewbox>
                                    </Button>
                                  </StackPanel>
                                  <TextBlock Grid.Row="1" Grid.Column="0"
                                             Text="{Binding SecondParticipantName}"
                                             Style="{StaticResource BodyTextStyle}" FontSize="12"
                                             VerticalAlignment="Center"
                                             TextTrimming="CharacterEllipsis"
                                             ToolTip="{Binding SecondParticipantName}"/>
                                  <!-- Стрелки управления для второго участника -->
                                  <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Left">
                                    <StackPanel.Style>
                                      <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                          <DataTrigger Binding="{Binding DataContext.IsCategoryFinished, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                          </DataTrigger>
                                        </Style.Triggers>
                                      </Style>
                                    </StackPanel.Style>
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            ToolTip="Влево"
                                            Command="{Binding DataContext.MoveLeftSecondCommand, ElementName=Root}"
                                            CommandParameter="{Binding}" Visibility="{Binding Round, Converter={StaticResource RoundToLeftVisibilityConverter}}">
                                      <Viewbox Width="12" Height="12"><Path Data="M12,6 L6,12 12,18" StrokeThickness="2" Stroke="{StaticResource TextPrimaryBrush}"/></Viewbox>
                                    </Button>
                                    <Button Style="{StaticResource IconButtonStyle}"
                                            ToolTip="Вправо"
                                            Command="{Binding DataContext.MoveRightSecondCommand, ElementName=Root}"
                                            CommandParameter="{Binding}">
                                      <Viewbox Width="12" Height="12"><Path Data="M6,6 L12,12 6,18" StrokeThickness="2" Stroke="{StaticResource TextPrimaryBrush}"/></Viewbox>
                                    </Button>
                                  </StackPanel>

                                  <!-- Кнопки начать/завершить удалены. Изменения выполняются локально, сервер фиксируется только при закрытии категории. -->

                                  <TextBox Grid.Row="0" Grid.Column="2"
                                           Width="90" MinWidth="80"
                                           Margin="8,2,0,2"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           Text="{Binding FirstParticipantScore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                           >
                                    <TextBox.Style>
                                      <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
                                        <Setter Property="IsEnabled" Value="{Binding DataContext.IsTournamentEditable, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                        <Style.Triggers>
                                          <DataTrigger Binding="{Binding DataContext.IsCategoryFinished, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                          </DataTrigger>
                                        </Style.Triggers>
                                      </Style>
                                    </TextBox.Style>
                                  </TextBox>
                                  <TextBox Grid.Row="1" Grid.Column="2"
                                           Width="90" MinWidth="80"
                                           Margin="8,2,0,2"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           Text="{Binding SecondParticipantScore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                           >
                                    <TextBox.Style>
                                      <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
                                        <Setter Property="IsEnabled" Value="{Binding DataContext.IsTournamentEditable, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                        <Style.Triggers>
                                          <DataTrigger Binding="{Binding DataContext.IsCategoryFinished, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                          </DataTrigger>
                                        </Style.Triggers>
                                      </Style>
                                    </TextBox.Style>
                                  </TextBox>
                                </Grid>
                              </Border>
                            </DataTemplate>
                          </ListBox.ItemTemplate>
                        </ListBox>
                      </StackPanel>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </StackPanel>
            </ScrollViewer>
          </DataTemplate>
        </TabControl.ContentTemplate>
      </TabControl>
    </Border>

    <!-- Нижняя панель действий -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,0,0">
      <Button Content="Назад"
              Style="{StaticResource SecondaryButtonStyle}"
              Command="{Binding DataContext.BackCommand, ElementName=Root}"
              Height="40"
              Margin="0,0,12,0"
              ToolTip="Вернуться к деталям турнира"/>
      <Button Content="Завершить категорию"
              Style="{StaticResource PrimaryButtonStyle}"
              Height="40"
              Command="{Binding DataContext.FinishCategoryCommand, ElementName=Root}"
              IsEnabled="{Binding ElementName=Root, Path=DataContext.IsTournamentEditable}"
              ToolTip="Фиксировать результаты и показать призовые места"/>
    </StackPanel>
  </Grid>
</UserControl>
